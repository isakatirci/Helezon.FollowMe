@model Helezon.FollowMe.WebUI.Controllers.ProductVm

<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion1" href="#collapse_orgu_detaylari"> ÖRGÜ DETAYLARI </a>
        </h4>
    </div>
    <div id="collapse_orgu_detaylari" class="panel-collapse collapse">
        <div class="panel-body">
            <div class="form-horizontal form-bordered form-row-stripped">
                <div class="form-group">
                    <label class="control-label col-md-2">Örgü Tipi</label>
                    <div class="col-md-6">
                        @Html.DropDownListFor(x => x.Product.OrguTipiId, Model.Collections.OrguTipleri, "Please Select", new { @class = "form-control select2", @onchange = "getOrguDetaylari($(this))" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2"></label>
                    <div class="col-md-6">
                        @Html.HiddenFor(x => x.Product.OrguDetaylariIds)
                        <textarea rows="2"
                                  readonly
                                  cols="20"
                                  id="Product_OrguDetaylari"
                                  value="@(string.Join(",",Model.OrguDetaylari.Select(x => x.Name)))"
                                  class="form-control"></textarea>
                        <br />
                        <div class="panel panel-default">
                            <div class="panel-body" style="height:200px; overflow-y:auto;">
                                <div id="treeOrguDetaylari">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>