                <div class="details">
                    <div class="number">
                        <span data-counter="counterup" data-value="@ViewBag.OthersCounter2">0</span>
                    </div>
                    <div class="desc"> 	@ViewBag.OthersDesc2  </div>
                </div>
            </a>
        </div>
    }

</div>
<div class="clearfix"></div>


<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-green">
                    <i class="icon-settings font-red"></i>
                    <span class="caption-subject bold uppercase">ÜRÜN LİSTESİ</span>
                </div>
                <div class="tools"> </div>
            </div>
            <div class="portlet-body table-both-scroll">
                @*<div class="table-responsive">*@
                <table class="table table-striped table-bordered table-hover order-column" id="sample_3">
                    <thead>
                        <tr>
                            @if (Model != null)
                            {

                                for (int j = 0; j < 50; j++)
                                {
                                    <text>
                                        <th>
                                            @("Column" + j)
                                        </th>
                                    </text>
                                }
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            for (int k = 0; k < Model.Length; k++)
                            {

                                for (int i = 0; i < Model[k].Rows.Count; i++)
                                {
                                    <tr id="row_@i">
                                        @if (Model[k].Columns.Count > 7)
                                        {
                                            for (int j = 0; j < Model[k].Columns.Count; j++)
                                            {
                                                <td>
                                                    @Model[k].Rows[i][j].ToString()
                                                </td>
                                            }
                                        }
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
                @*</div>*@
            </div>
        </div>
    </div>
</div>


