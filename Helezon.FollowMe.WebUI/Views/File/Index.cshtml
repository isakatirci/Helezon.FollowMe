
@model Helezon.FollowMe.WebUI.Models.ViewModels.FileControllerIndexViewModel
@section afterGlobalStyles{

    <link href="~/Scripts/cropper/cropper.css" rel="stylesheet" />
    <link href="~/Scripts/cropper/main.css" rel="stylesheet" />
}
