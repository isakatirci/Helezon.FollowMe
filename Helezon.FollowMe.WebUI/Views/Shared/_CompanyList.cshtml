                                           @(parentInfo != string.Empty ? parentInfo + " " + GetAddressInfo(Model.Rows[i][7].ToString())+" ":"")@(parentInfo == string.Empty ? Model.Rows[i][1].ToString():string.Empty)&nbsp;@Model.Rows[i][2].ToString()
                                        </a>
                                    </td>
                                    @if (Model.Columns.Count > 7)
                                    {
