@model DateTime?
@{ 

    var dateYearAdded = ViewBag.YearAdded != null ? DateTime.Now.AddYears(ViewBag.YearAdded) : DateTime.Now;
    var elementValue = Model.HasValue ? string.Format("{0:D2}.{1:D2}.{2:D2}", Model.Value.Day, Model.Value.Month, Model.Value.Year)
        : string.Format("{0:D2}.{1:D2}.{2:D2}", dateYearAdded.Day, dateYearAdded.Month, dateYearAdded.Year);
}
<div class="input-group date date-picker @ViewBag.GroupClass" data-date-format="dd.mm.yyyy">
    <input type="text" class="form-control" value="@elementValue" readonly name="@ViewBag.ElementName">
    <span class="input-group-btn">
        <button class="btn default" type="button">
            <i class="fa fa-calendar"></i>
        </button>
    </span>
</div>