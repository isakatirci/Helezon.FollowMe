                                                    @Html.LabelFor(model => model.ZetaCodeFanteziIplikDto.BlueSiparisNo, htmlAttributes: new { @class = "control-label col-md-2" })
                                                    <div class="col-md-6">
                                                        @Html.EditorFor(model => model.ZetaCodeFanteziIplikDto.BlueSiparisNo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                        @Html.ValidationMessageFor(model => model.ZetaCodeFanteziIplikDto.BlueSiparisNo, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            }





                                            <div class="form-group">
                                                @Html.LabelFor(model => model.ZetaCodeFanteziIplikDto.Ulke, "Ürün Menşei", htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div class="col-md-6">
                                                    @Html.DropDownList("ZetaCodeFanteziIplikDto.Ulke"
    , Model.Collections.Ulkeler, "Please Select"
    , htmlAttributes: new { @class = "form-control select2" })
                                                    @Html.ValidationMessageFor(model => model.ZetaCodeFanteziIplikDto.Ulke, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.ZetaCodeFanteziIplikDto.BlueUrunKodIsmi, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div class="col-md-6">
                                                    @Html.EditorFor(model => model.ZetaCodeFanteziIplikDto.BlueUrunKodIsmi, new { htmlAttributes = new { @class = "form-control transform_none" } })
                                                    @Html.ValidationMessageFor(model => model.ZetaCodeFanteziIplikDto.BlueUrunKodIsmi, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="control-label col-md-2" for="ZetaCodeFanteziIplikDto.IplikKategosiId"></label>
                                                <div class="col-md-6">
                                                    <div class="panel panel-default">
                                                        <div class="panel-body">
                                                            <input type="hidden"
                                                                   name="ZetaCodeFanteziIplikDto.IplikKategosiId"
                                                                   id="ZetaCodeNormalIplikDto_IplikKategosiId"
                                                                   value="@Model.ZetaCodeFanteziIplikDto.IplikKategosi.Id" />
                                                            <input type="text"
                                                                   name="ZetaCodeFanteziIplikDto.IplikKategosiName"
                                                                   id="ZetaCodeNormalIplikDto_IplikKategosiName"
                                                                   readonly
                                                                   class="form-control"
                                                                   value="@Model.ZetaCodeFanteziIplikDto.IplikKategosi.Name" />
                                                            <br />
                                                            <div id="treeIplikKategosiId"></div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>



                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion1" href="#collapse_iplik_sec"> İPLİK SEÇ </a>
                        </h4>
                    </div>
                    <div id="collapse_iplik_sec" class="panel-collapse collapse">
                        <div class="panel-body">
                            <div class="form-body">
                                <div class="form-horizontal form-bordered form-row-stripped">
                                    @{
                                        var normalIplikCount = Model.ZetaCodeFanteziIplikDto.ZetaCodeNormalIplik.Count;
                                    }
                                    <div class="form-group">
                                        <label class="control-label col-md-2" for="">Kaç İplikten Oluşuyor</label>
                                        <div class="col-md-6">
                                            <select id="">
                                                <option value="">Please Select</option>
                                                <option @(normalIplikCount == 1 ? "selected" : "") value="1">1</option>
                                                <option @(normalIplikCount == 2 ? "selected" : "") value="2">2</option>
                                                <option @(normalIplikCount == 3 ? "selected" : "") value="3">3</option>
                                                <option @(normalIplikCount == 4 ? "selected" : "") value="4">4</option>
                                                <option @(normalIplikCount == 5 ? "selected" : "") value="5">5</option>
                                            </select>
