                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="ZetaCodeNormalIplikDto_RafyeriYunanistanId" class="control-label col-md-2"></label>
                                        <div class="col-md-6">
                                            <div class="panel panel-default">
                                                <div class="panel-body" style="height:200px; overflow-y:auto;">
                                                    <input type="hidden"
                                                           name="ZetaCodeFanteziIplikDto.RafyeriYunanistanId"
                                                           id="ZetaCodeNormalIplikDto_RafyeriYunanistanId"
                                                           value="@Model.ZetaCodeFanteziIplikDto.RafyeriYunanistan.Id" />
                                                    <input type="text"
                                                           name="ZetaCodeFanteziIplikDto.RafyeriYunanistanName"
                                                           id="ZetaCodeNormalIplikDto_RafyeriYunanistanName"
