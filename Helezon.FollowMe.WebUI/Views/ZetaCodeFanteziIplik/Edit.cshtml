                            </div>
                        </div>
                    </div>
                </div>



                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion1" href="#collapse_rafyerleri"> Raf Yerleri </a>
                        </h4>
                    </div>
                    <div id="collapse_rafyerleri" class="panel-collapse collapse">
                        <div class="form-horizontal form-bordered form-row-stripped">
                            <div class="form-body">
                                <div class="panel-body">
                                    <div class="form-group">
                                        <label for="ZetaCodeNormalIplikDto_RafyeriTurkiyeId" class="control-label col-md-2"></label>
                                        <div class="col-md-6">
                                            <div class="panel panel-default">
                                                <div class="panel-body" style="height:200px; overflow-y:auto;">
                                                    <input type="hidden"
                                                           name="ZetaCodeFanteziIplikDto.RafyeriTurkiyeId"
                                                           id="ZetaCodeNormalIplikDto_RafyeriTurkiyeId"
                                                           value="@Model.ZetaCodeFanteziIplikDto.RafyeriTurkiye.Id" />
