                                                <input type="hidden" name="ZetaCodeFanteziIplikDto.SirketId" id="ZetaCodeNormalIplikDto_SirketId" value="@Model.ZetaCodeFanteziIplikDto.SirketId" />
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.ZetaCodeFanteziIplikDto.SirketId, "Blue Cod Name", htmlAttributes: new { @class = "control-label col-md-2" })
